{
  "name": "gitscope-cli",
  "version": "1.2.2",
  "description": "A lightweight CLI to summarize Git commit history into readable changelogs (HTML, JSON, Markdown).",
  "bin": {
    "gitscope": "./dist/bin/gitscope.js"
  },
  "keywords": [
    "git",
    "cli",
    "changelog",
    "commit-summary",
    "html-report",
    "json",
    "markdown",
    "release notes"
  ],
  "author": "Nitin Nair",
  "license": "MIT",
  "repository": {
    "type": "MIT",
    "url": "https://github.com/NitinNair89/gitscope-cli"
  },
  "bugs": {
    "url": "https://github.com/NitinNair89/gitscope-cli/issues"
  },
  "homepage": "https://github.com/NitinNair89/gitscope-cli#readme",
  "type": "commonjs",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "node esbuild.config.mjs",
    "dev": "npm run build && node dist/bin/gitscope.js",
    "format": "prettier --write .",
    "test": "jest --coverage",
    "clean": "rimraf dist",
    "prepack": "npm run clean && npm run build"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.31.0",
    "@eslint/json": "^0.13.0",
    "@eslint/markdown": "^7.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "esbuild": "^0.25.8",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  },
  "dependencies": {
    "mri": "^1.2.0"
  }
}